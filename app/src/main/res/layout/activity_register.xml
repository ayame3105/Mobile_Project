        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/button_background_update"
            android:id="@+id/cardview">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhập thông tin tài khoản"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"

                    android:gravity="center"
                    />
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                        <TextView
                            android:id="@+id/text_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="25dp"
                            android:layout_marginTop="15dp"/>

                        <EditText
                            android:id="@+id/edit_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="nguyenvana@gmail.com"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/text_register_email" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/text_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mật khẩu: "
                            android:textSize="25dp"
                            app:layout_constraintTop_toBottomOf="@id/edit_register_email" />

                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/edit_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ít nhất 8 ký tự"
                            app:layout_constraintTop_toBottomOf="@id/text_register_password" />
                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"
            android:text="Create"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/login_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản rồi? Đăng nhập ngay"
            android:textColor="#0000FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/button_create_account" />


</androidx.constraintlayout.widget.ConstraintLayout>